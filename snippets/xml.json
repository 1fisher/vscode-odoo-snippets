{
    "odoo_form": {
        "prefix": "oform",
        "body": [
            "<!-- ${1:model.name} form view -->",
            "<record id=\"${2:model_name}_view_form\" model=\"ir.ui.view\">",
            "\t<field name=\"name\">${1:model.name}.view.form</field>",
            "\t<field name=\"model\">${1:model.name}</field>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t\t<form string=\"${3}\">",
            "\t\t\t<sheet>",
            "\t\t\t\t<group>",
            "\t\t\t\t\t<field name=\"${4:name}\"/>",
            "\t\t\t\t\t$0",
            "\t\t\t\t</group>",
            "\t\t\t</sheet>",
            "\t\t</form>",
            "\t</field>",
            "</record>"
        ],
        "description": "Create Form View"
    },
    "odoo_form_inherit": {
        "prefix": "oformi",
        "body": [
            "<!-- ${1:model.name} inherit form view -->",
            "<record id=\"${2:view_id}\" model=\"ir.ui.view\">",
            "\t<field name=\"name\">${1:model.name}.inherit.view.form</field>",
            "\t<field name=\"model\">${1:model.name}</field>",
            "\t<field name=\"inherit_id\" ref=\"${3:base_module}.${2:view_id}\"/>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t\t<xpath expr=\"//field[@name='${4:name}']\" position=\"${5:after}\">",
            "\t\t\t<!-- Add your fields or attributes here -->",
            "\t\t\t$0",
            "\t\t</xpath>",
            "\t</field>",
            "</record>"
        ],
        "description": "Inherit Existing Form View"
    },
    "odoo_tree": {
        "prefix": "otree",
        "body": [
            "<!-- ${1:model.name} tree view -->",
            "<record id=\"${2:model_name}_view_tree\" model=\"ir.ui.view\">",
            "\t<field name=\"name\">${1:first.name}.view.tree</field>",
            "\t<field name=\"model\">${1:first.name}</field>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t\t<tree>",
            "\t\t\t<field name=\"${3:name}\"/>",
            "\t\t\t$0",
            "\t\t</tree>",
            "\t</field>",
            "</record>"
        ],
        "description": "Create Tree View"
    },
    "odoo_tree_inherit": {
        "prefix": "otreei",
        "body": [
            "<!-- ${1:model.name} inherit tree view -->",
            "<record id=\"${2:view_id}\" model=\"ir.ui.view\">",
            "\t<field name=\"name\">${1:model.name}.inherit.view.form</field>",
            "\t<field name=\"model\">${1:model.name}</field>",
            "\t<field name=\"inherit_id\" ref=\"${3:base_module}.${2:view_id}\"/>",
            "\t<field name=\"arch\" type=\"xml\">",
            "\t<sheet>",
            "\t\t<xpath expr=\"//field[@name='${4:name}']\" position=\"${5:after}\">",
            "\t\t\t<!-- Add new fields here -->",
            "\t\t\t$0",
            "\t\t</xpath>",
            "\t</sheet>",
            "\t</field>",
            "</record>"
        ],
        "description": "Inherit Existing Tree View"
    },
    "odoo_xpath": {
        "prefix": "oxpath",
        "body": [
            "<xpath expr=\"//${1:field}[${2:@name}='${3:name}']\" position=\"${4:after}\">",
            "\t<!-- Add your fields or attributes here -->",
            "\t$0",
            "</xpath>"
        ],
        "description": "Add the structure of xpath"
    },
    "odoo_action": {
        "prefix": "oact",
        "body": [
            "<!-- ${1:model.name} action window -->",
            "<record id=\"${2:model_name}_action\" model=\"ir.actions.act_window\">",
            "\t<field name=\"name\">${1:model.name}.action</field>",
            "\t<field name=\"type\">ir.actions.act_window</field>",
            "\t<field name=\"res_model\">${1:model.name}</field>",
            "\t<field name=\"view_mode\">tree,form</field>",
            "\t<field name=\"help\" type=\"html\">",
            "\t\t<p class=\"oe_view_nocontent_create\">",
            "\t\t\t<!-- Add Text Here -->",
            "\t\t</p><p>",
            "\t\t\t<!-- More details about what a user can do with this object will be OK --> ",
            "\t\t</p>",
            "\t</field>",
            "</record>"
        ]
    },
    "odoo_notebook": {
        "prefix": "onote",
        "body": [
            "<notebook>",
            "\t<page string=\"${1}\" name=\"${2}\">",
            "\t\t<group>",
            "\t\t\t<field name=\"${3}\"/>",
            "\t\t</group>",
            "\t</page>",
            "</notebook>"
        ]
    },
    "odoo_page": {
        "prefix": "opage",
        "body": [
            "<page string=\"${1}\" name=\"${2}\">",
            "\t<group>",
            "\t\t<field name=\"${3}\"/>",
            "\t</group>",
            "</page>"
        ]
    },
    "odoo_menu_root": {
        "prefix": "omenur",
        "body": [
            "<!-- This Menu Item will appear in the Upper bar, that's why It needs NO parent or action -->",
            "<menuitem id=\"${1}_menu_root\" name=\"${2}\" sequence=\"${3}\"/>"
        ]
    },
    "odoo_menu_category": {
        "prefix": "omenuc",
        "body": [
            "<!-- This Menu Item Must have a parent -->",
            "<menuitem id=\"${1}_menu_categ\" name=\"${2}\" parent=\"${3}\" sequence=\"${4}\"/>"
        ]
    }
}